<?php
$this->css($this->assetModule('css/front.css', 'comment'));
$this->headMeta('noindex', 'robots');

// Count
$count = $comment['count'];
// Comment list generated by comment module:
// id, time, content, user
// uid, name, avatar, profile_url, IP
$posts = $comment['posts'];
// Pagination object
$paginator = $comment['paginator'];


$templateRating = <<<'EOT'
    <div class="item-rating">
        <i class="fa %s" aria-hidden="true"></i>
        <i class="fa %s" aria-hidden="true"></i>
        <i class="fa %s" aria-hidden="true"></i>
        <i class="fa %s" aria-hidden="true"></i>
        <i class="fa %s" aria-hidden="true"></i>
    </div>
EOT;
?>
    <div class="pi-comment">
        <?php if ($posts) { ?>
            <div class="pi-comment-list">
                <h1 class="pi-comment-header"><?php echo __('All active comments ') . " ({$count})"; ?></h1>
                <?php foreach ($posts[0] as $post) { ?>
                    <div class="pi-comment-single media">
                        <?php if ($post['uid'] > 0) { ?>
                            <a class="pull-left" href="<?php echo $post['user']['url']; ?>">
                                <?php echo Pi::avatar()->get($post['uid'], 'medium'); ?>
                            </a>
                        <?php } else { ?>
                            <p class="pull-left">
                                <?php echo Pi::avatar()->get($post['uid'], 'medium'); ?>
                            </p>
                        <?php } ?>
                        <div class="media-body">
                            <ul class="list-inline">
                                <li class="pi-comment-user">
                                    <?php if ($post['uid'] > 0) { ?>
                                        <a href="<?php echo $post['user']['url']; ?>" target="_blank" title="<?php echo $post['user']['name']; ?>" class="highlight">
                                            <?php echo $post['user']['name']; ?>
                                        </a>
                                    <?php } else { ?>
                                        <?php echo $post['identity']; ?>
                                    <?php } ?>
                                </li>
                                <li class="pull-right muted pi-comment-time"><?php echo _date($post['time']); ?></li>
                            </ul>
                            <div class="pi-comment-desc">
                                <p>
                                    <?php _e('Commented on '); ?></li>
                                    <a class="highlight " href="<?php echo $post['target']['url']; ?>" title="<?php echo $post['target']['title']; ?>">
                                        <?php echo $post['target']['title']; ?>
                                    </a>
                                </p>
                            </div>
                            <?php if ($post['type'] == 'REVIEW' && $post['reply'] == 0) {
                                $ratings = '';
                                foreach ($post['rating'] as $id => $rating) {
                                    $star = sprintf($templateRating, 
                                        $rating['rating'] > 0 ? 'fa-star' : 'fa-star-o',
                                        $rating['rating'] > 1 ? 'fa-star' : 'fa-star-o',
                                        $rating['rating'] > 2 ? 'fa-star' : 'fa-star-o',
                                        $rating['rating'] > 3 ? 'fa-star' : 'fa-star-o',
                                        $rating['rating'] > 4 ? 'fa-star' : 'fa-star-o'
                                    );  
                                    $ratings .= '<div data-value="' . $rating['rating'] . '" for="rating-' . $id . '">' . $rating['type'] . ' : ';
                                    $ratings .=  $star;
                                    $ratings .=  '</div>';
                                }
                            ?>
                                <div class="small ratings">
                                    <p><?php echo $ratings ?></p>
                                </div>
                                <p class="small">
                                    <?php echo __('Experience time') . ': ' . _date($post['time_experience']) ?>
                                </p>
                            <?php } ?>
                            
                            <div class="pi-comment-content">
                                <?php echo $post['content']; ?>
                            </div>
                            <?php if ($post['uid'] > 0) { ?>
                                <div class="pi-comment-operation">
                                    <ul class="list-inline">
                                        <?php foreach ($post['operations'] as $operation => $optData) { ?>
                                            <li class="operation muted">
                                                <a href="<?php echo $optData['url']; ?>"<?php echo 'delete' == $operation ? sprintf(' onclick="return confirm(\'%s\')"', __('Are you sure to delete this comment?')) : ''; ?>>
                                                    <?php echo _escape($optData['title']); ?>
                                                </a>
                                            </li>
                                        <?php } ?>
                                    </ul>
                                </div>
                            <?php } ?>
                        </div>
                    </div>
                <?php } ?>
            </div>
        <?php } else { ?>
            <div class="pi-comment-none"><?php _e('No comments available yet.'); ?></div>
        <?php } ?>
    </div>
<?php
if ($posts && $paginator) {
    echo $this->pagination(
        $paginator,
        'Sliding',
        'paginator.phtml',
        array('class' => 'pagination-right')
    );
}
?>